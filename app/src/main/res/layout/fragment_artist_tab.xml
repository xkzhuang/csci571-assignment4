<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <!-- Loading Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- Artist Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/artistInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Artist Info Row with Image and Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Artist Image (Square with rounded corners) -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:id="@+id/artistImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Artist image"
                            android:scaleType="centerCrop" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Artist Info Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <!-- Artist Name and External Link Row -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.example.myapplication.utils.MarqueeTextView
                                android:id="@+id/artistNameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/externalLinkButton"
                                android:layout_marginEnd="8dp"
                                android:text="Artist Name"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall" />

                            <ImageButton
                                android:id="@+id/externalLinkButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Open in Spotify"
                                android:src="@drawable/ic_external_link"
                                android:padding="12dp" />

                        </RelativeLayout>

                        <!-- Followers and Popularity Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followers: "
                                android:textAppearance="?attr/textAppearanceBodySmall" />

                            <com.example.myapplication.utils.MarqueeTextView
                                android:id="@+id/followersTextView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:singleLine="true"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Popularity: "
                                android:textAppearance="?attr/textAppearanceBodySmall" />

                            <TextView
                                android:id="@+id/popularityTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Genres (left-aligned with image) -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/genresChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:singleLine="false"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Albums Section -->
        <TextView
            android:id="@+id/albumsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/albums_label"
            android:textAppearance="?attr/textAppearanceTitleLarge" />

        <!-- No Artist Message -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/noArtistCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSecondaryContainer"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/noArtistMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_artist_data"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Albums RecyclerView (Grid) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/albumsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
